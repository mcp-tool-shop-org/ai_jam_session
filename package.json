{
  "name": "@mcptoolshop/pianoai",
  "version": "1.3.1",
  "description": "Piano player with built-in audio engine â€” plays through speakers, no external software required. MCP server + CLI.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "pianoai": "dist/cli.js",
    "pianoai-mcp": "dist/mcp-server.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "logo.svg"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "start": "node dist/cli.js",
    "mcp": "node dist/mcp-server.js",
    "smoke": "node --import tsx src/smoke.ts"
  },
  "keywords": [
    "piano",
    "audio",
    "midi",
    "mcp",
    "ai",
    "music",
    "voice",
    "web-audio"
  ],
  "author": "mcp-tool-shop",
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mcp-tool-shop-org/pianoai.git"
  },
  "dependencies": {
    "@mcptoolshop/ai-music-sheets": "^1.0.0",
    "@modelcontextprotocol/sdk": "^1.26.0",
    "jzz": "^1.8.0",
    "midi-file": "^1.2.4",
    "node-web-audio-api": "^1.0.8",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "tsx": "^4.19",
    "typescript": "^5.7",
    "vitest": "^3.0"
  }
}
